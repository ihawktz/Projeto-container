@model RelatorioViewModel

@{
    ViewData["Title"] = "Relatório";
}

<div>

        <div class="d-flex justify-content-center align-items-center mb-5">
            <h1>Gerar Relatório</h1>
        </div>


        <table class="table table-hover">
            <thead>
            <tr class="bg-info">
                    <th scope="col">Cliente</th>
                    <th scope="col">Quantidade Importação</th>
                    <th scope="col">Quantidade Exportação</th>
                </tr>
            </thead>
            <tbody>

                @if (Model != null)
                {
                    @foreach (var relatorio in Model.GrupoPorCliente)
                    {
                    <tr class="table-info">
                            <th scope="row">@relatorio.NomeCliente</th>
                            <td>@relatorio.QtdImportacao</td>
                            <td>@relatorio.QtdExportacao</td>
                        </tr>
                    }
                }

            </tbody>
        </table>

    <div class="row">
        <div class="col">
            <div class="d-flex justify-content-end">
                <form method="post" asp-controller="Relatorio" asp-action="GerarRelatorio">
                    <button type="submit" class="btn btn-success mx-2">Gerar Relatório</button>
                </form>
            </div>
        </div>
    </div>

</div>

    


</div>
