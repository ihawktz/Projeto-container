@model IEnumerable<ContainerModel>

@{
    ViewData["Title"] = "Containers";
}

<div>

    <div class="d-flex justify-content-center align-items-center mb-5">
        <h1>Containers</h1>
    </div>

<table class="table table-hover">
    <thead>
        <tr class="bg-info">
            <th scope="col">Cliente</th>
            <th scope="col">Nº Container</th>
            <th scope="col">Tipo</th>
            <th scope="col">Status</th>
            <th scope="col">Categoria</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @if(Model != null)
        {

            @foreach(var container in Model)
            {
                    <tr class="table-info">
                <th scope="row">@container.Cliente</th>
                    <td>@container.NumeroContainer</td>
                    <td>@container.Tipo</td>
                    <td>@container.Status</td>
                    <td>@container.Categoria</td>
                    <td>
                        <a class="btn btn-warning mx-2" asp-controller="Container" asp-route-id="@container.ID" asp-action="Editar" >Editar</a>
                            <a class="btn btn-danger mx-2" asp-controller="Container" asp-route-id="@container.ID" asp-action="Excluir">Excluir</a>
                    </td>
            </tr> 
            }
        }

    </tbody>
</table>

    <div class="row">
        <div class="col">
            <div class="d-flex justify-content-end">
                <a class="btn btn-success mx-2" asp-controller="Container" asp-action="Adicionar">Adicionar</a>
            </div>
        </div>
    </div>

</div>
