@model ContainerModel

@{
    ViewData["Title"] = "Adicionar Container";
}

<div class="container p-5 roundded-5">

    <div class="mb-5 text-center">
        <h1>Cadastro Containers</h1>
    </div>

    <form class="row g-3" method="post" asp-controller="Container" asp-action="Adicionar">
        <div class="col-md-12">
            <label for="inputCliente" class="form-label">Cliente</label>
            <input type="text" class="form-control" placeholder="Cliente: " asp-for="Cliente">
            <span asp-validation-for="Cliente"></span>
        </div>
        <div class="col-md-4">
            <label for="inputContainer" class="form-label">Nº Container</label>
            <input type="text" class="form-control" placeholder="Numero do Container:" asp-for="NumeroContainer" maxLengt="11">
            <span asp-validation-for="NumeroContainer"></span>
        </div>
        <div class="col-md-2">
            <label for="inputTipo" class="form-label">Tipo</label>
            <select id="inputTipo" class="form-select" asp-for="Tipo">
                <option selected>Selecione...</option>
                <option>20</option>
                <option>40</option>
            </select>
            <span asp-validation-for="Tipo"></span>
        </div>
        <div class="col-md-3">
            <label for="inputStatus" class="form-label">Status</label>
            <select id="inputStatus" class="form-select" asp-for="Status">
                <option selected>Selecione...</option>
                <option>Cheio</option>
                <option>Vazio</option>
            </select>
            <span asp-validation-for="Status"></span>
        </div>
        <div class="col-md-3">
            <label for="inputCategoria" class="form-label">Categoria</label>
            <select id="inputCategoria" class="form-select" asp-for="Categoria">
                <option selected>Selecione...</option>
                <option>Importação</option>
                <option>Exportação</option>
            </select>
            <span asp-validation-for="Categoria"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <a class="btn btn-danger w-50" asp-controller="Container" asp-action="Index">Voltar</a>
            <button type="submit" class="btn btn-success w-50">Adicionar</button>
        </div>
    </form>



</div>